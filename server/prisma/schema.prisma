generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  username String    @unique
  password String
  name     String?
  createdAt DateTime @default(now())
  expenses Expense[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  amount      Float
  category    String
  description String
  date        DateTime
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
